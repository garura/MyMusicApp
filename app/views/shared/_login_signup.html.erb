<form action="<%= new_session_url %>" method="POST">
  <input  name="authenticity_token"
          value="<%= form_authenticity_token %>"
          type="hidden">

  <input type="hidden" name="_method" value="get">
  <input type="submit" value="Log into my account">
</form>
