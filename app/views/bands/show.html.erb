<h1><%= @band.band_name %></h1>
<form action="<%= new_band_album_url(@band) %>" method="post">
  <input type="hidden" name="_method" value="get">

  <input  name="authenticity_token"
          value="<%= form_authenticity_token %>"
          type="hidden">

   <input type="submit" value="Add an album!">
</form>
<% the_albums = @band.albums %>
<% if the_albums.any? %>
  <h3><%= "Albums:" %></h3>
<% else %>
  <h3><%= "No Albums Found" %></h3>
<% end %>
<ul>
  <% the_albums.each do |album| %>
    <li><%= link_to album.album_name, album_url(album) %></li>
  <% end %>
</ul>

<br>
<%= link_to "Edit:  #{@band.band_name}", edit_band_url(@band) %>
<br>
<br>
<%= link_to "Back to all bands", bands_url %>
<br>
<br>
<form action="<%= band_url(@band) %>" method="post">
  <input type="hidden" name="_method" value="delete">

  <input  name="authenticity_token"
          value="<%= form_authenticity_token %>"
          type="hidden">

   <input type="submit" value="Delete this band :(">
</form>
