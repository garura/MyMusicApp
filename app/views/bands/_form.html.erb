<% action = (band.persisted? ? band_url(band) : bands_url) %>
<% method = (band.persisted? ? :patch : :post) %>
<% back_link = (band.persisted?) ? band_url(band) : bands_url %>
<form action="<%= action %>" method= "post">
  <input type="hidden" name="_method" value="<%= method %>">


  <input  name="authenticity_token"
          value="<%= form_authenticity_token %>"
          type="hidden">

  <label for="band_name">Band Name: </label>
  <input
    type="text"
    name="band[band_name]"
    id="band_name"
    value="<%= band.band_name %>">

  <br>
  <br>

  <% submit_text = (band.persisted?) ? "Update!" : "Create!" %>
  <% back_link = (band.persisted?) ? band_url(band) : bands_url %>
  <input type="submit" value="<%= submit_text %>">


</form>
<form action="<%= back_link %>" method="get">
  <input type="submit" value="Cancel">
</form>
